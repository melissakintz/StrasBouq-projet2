<form method="post" enctype="multipart/form-data" class="uk-form-width-large uk-align-center">
	<input type="hidden" value="{{ bouquetVitrine.id }}" name="id">
	<fieldset class="uk-fieldset">
		<div class="uk-block uk-margin">
			<label class="uk-label" for="name">Nom du bouquet</label>
			<input required class="uk-input uk-border-rounded" type="text" value="{{ bouquetVitrine.name }}" name="name">
		</div>
		<div class="uk-block uk-margin">
			<label class ="uk-label" for="fleur">Upload ton image</label>
			<input type="file" value="Ton image" name="fleur">
		</div>

		<h3> Composition bouquet</h3>
		{% for fleurs in fleursVitrine  %}
			
		<div class="uk-block uk-margin">
			<label class ="uk-label" for="idStock[{{ fleurs.id }}][quantity]">{{ fleurs.name }}</label>
			<input class="uk-input uk-border-rounded" type="number" name="idStock[{{ fleurs.id }}][quantity]" value="{{ fleurs.nombre }}">
		</div>
		{% endfor %}
		<div class="uk-block uk-margin">
			<input class="uk-input uk-form-width-small uk-border-rounded" type="submit" value="Valider">
		</div>
	</fieldset>
</form>


